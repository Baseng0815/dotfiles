{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp", "cu"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "lua-language-server": {
            "command": "/usr/bin/lua-language-server",
            "filetypes": ["lua"]
        },
        "svls": {
            "command": "svls",
            "filetypes": ["systemverilog"]
        },
        "zls" : {
           "command": "/usr/bin/zls",
           "filetypes": ["zig"]
       }
    },
    "suggest.noselect": true
}
