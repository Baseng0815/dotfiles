#!/bin/sh
if [ -d /sys/class/power_supply/BAT0 ]; then
    [ "$(</sys/class/power_supply/AC/online)" = "1" ] && symbol=ðŸ”Œ || symbol=ðŸ”‹
    [ "$symbol" = "ðŸ”‹" ] && remaining=$(acpi --battery | awk '/Discharging/{print substr($5, 1, 5)}')
    [ -n "$remaining" ] && remaining="(${remaining}h)"
    echo "$symbol$(</sys/class/power_supply/BAT0/capacity)% $remaining"
fi
