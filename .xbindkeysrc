# increase volume
"pamixer --increase 10; pkill -RTMIN+9 dwmblocks"
    XF86_AudioRaiseVolume

# decrease volume
"pamixer --decrease 10; pkill -RTMIN+9 dwmblocks"
    XF86_AudioLowerVolume

# mute volume
"pamixer --toggle-mute toggle; pkill -RTMIN+9 dwmblocks"
    XF86_AudioMute

# graphical volume control with per-application volume settings
"pavucontrol"
    Mod4 + v

# mute microphone
"pactl set-source-mute @DEFAULT_SINK@ toggle"
    XF86_AudioMicMute

# toggle play/pause
"playerctl --player=$([ -f /tmp/default_player ] && cat /tmp/default_player) play-pause"
    XF86_AudioPlay

# next
"playerctl --player=$([ -f /tmp/default_player ] && cat /tmp/default_player) next"
    XF86_AudioNext

# prev
"playerctl --player=$([ -f /tmp/default_player ] && cat /tmp/default_player) previous"
    XF86_AudioPrev

# select player
"select-player"
    Mod4 + p

# select sink
"choose-sink"
    Mod4 + o

# emoji select
"select-emoji --paste"
    Mod4 + e

# increase brightness
"xbacklight -inc 10"
    XF86MonBrightnessUp

# decrease brightness
"xbacklight -dec 10"
    XF86MonBrightnessDown

# screenshot
"escrotum -sC"
    Print

# keyboard layouts using ibus/mozc
"kblayout toggle"
    Mod4 + space

# random wallpaper
"setbg $HOME/Wallpapers"
    Mod4 + w

# terminal (st)
"st"
    Alt + Shift + Return

# application launcher (rofi)
"rofi -show drun"
    Alt + p

# calculator (python)
"st -e python -i -c 'from math import *; import numpy as np'"
    XF86Calculator

# calculator (python)
"st -e python -i -c 'from math import *; import numpy as np'"
    Mod4 + c

# dunst context
"dunstctl context"
    Mod4 + period

# browser (brave)
"brave"
    Mod4 + b

# spotify tui
"st -e spt"
    Mod4 + s

# file manager
"nemo"
    Mod4 + f
